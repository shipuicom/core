#!/usr/bin/env bun

import { parseArgs } from 'util';
import { main } from './src/sparkle-fg';

const { values } = parseArgs({
  args: Bun.argv,
  options: {
    src: {
      type: 'string',
    },
    out: {
      type: 'string',
    },
    rootPath: {
      type: 'string',
      default: '/',
    },
  },
  allowPositionals: true,
  strict: true,
});

if (values.src === undefined || values.out === undefined) {
  throw new Error('src and out are both required arguments');
}

main(values);
