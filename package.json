{
  "name": "ship-ui",
  "version": "0.1.11",
  "license": "MIT",
  "homepage": "https://shipui.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shipuicom/core"
  },
  "engines": {
    "node": "24"
  },
  "contributors": [
    {
      "name": "SimonBitwise",
      "url": "https://github.com/sp90"
    },
    {
      "name": "Mortenpx",
      "url": "https://x.com/mortenpx"
    }
  ],
  "scripts": {
    "ng": "ng",
    "patch": "cd projects/ship-ui && npm version patch && cd ../../",
    "minor": "cd projects/ship-ui && npm version minor && cd ../../",
    "major": "cd projects/ship-ui && npm version major && cd ../../",
    "gen:font": "node ./dist/ship-ui/bin/ship-fg-node --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --verbose",
    "watch:font": "node ./dist/ship-ui/bin/ship-fg-node --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --watch --verbose",
    "start": "bun run watch:font & ng serve --port=4205",
    "mcp:prep": "bun mcp-server/scan.ts && mkdir -p projects/ship-ui/bin/mcp && bun build mcp-server/index.ts --outfile projects/ship-ui/bin/mcp/index.js --target node --bundle && echo '#!/usr/bin/env node' | cat - projects/ship-ui/bin/mcp/index.js > projects/ship-ui/bin/mcp/index.js.tmp && mv projects/ship-ui/bin/mcp/index.js.tmp projects/ship-ui/bin/mcp/index.js && chmod +x projects/ship-ui/bin/mcp/index.js",
    "build": "npm run mcp:prep && ng build ship-ui",
    "test": "ng test ship-ui",
    "build:prod": "ng build ship-ui --configuration production",
    "build:docs": "npm run build:prod && npm run gen:font && ng build design-system --configuration production",
    "serve:docs": "npm run serve-docs",
    "watch": "ng build ship-ui --watch --configuration development",
    "mcp:update": "cd mcp-server && bun run scan.ts",
    "mcp:start": "cd mcp-server && bun run index.ts",
    "serve:ssr:design-system": "node dist/design-system/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.0",
    "colorizr": "^3.0.8",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "rxjs": "~7.8.2",
    "subset-font": "^2.4.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@phosphor-icons/web": "^2.1.2",
    "@types/bun": "^1.3.3",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/subset-font": "^2.3.0",
    "@vitest/coverage-v8": "^4.0.13",
    "jsdom": "^27.2.0",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
