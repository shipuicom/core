{
  "name": "sparkle-ui",
  "version": "0.0.3",
  "scripts": {
    "ng": "ng",
    "gen:font": "bun ./dist/sparkle-ui/bin/sparkle-fg --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --verbose",
    "watch:font": "bun ./dist/sparkle-ui/bin/sparkle-fg --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --watch --verbose",
    "start": "bun run watch:font & ng serve",
    "build": "ng build sparkle-ui",
    "build:prod": "ng build sparkle-ui --configuration production",
    "watch": "ng build sparkle-ui --watch --configuration development",
    "serve:ssr:design-system": "node dist/design-system/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.5",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/material": "^18.0.5",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/platform-server": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/ssr": "^18.0.6",
    "@japont/unicode-range": "^1.0.0",
    "@types/bun": "^1.1.6",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "subset-font": "^2.3.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.6",
    "@angular/cli": "^18.0.1",
    "@angular/compiler-cli": "^18.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "@types/subset-font": "^1.4.3",
    "ng-packagr": "^18.0.0",
    "phosphor-icons": "^1.4.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4"
  }
}
