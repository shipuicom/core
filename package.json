{
  "name": "sparkle-ui",
  "version": "0.0.5",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "patch": "cd projects/sparkle-ui && npm version patch && cd ../../",
    "minor": "cd projects/sparkle-ui && npm version minor && cd ../../",
    "major": "cd projects/sparkle-ui && npm version major && cd ../../",
    "gen:font": "bun ./dist/sparkle-ui/bin/sparkle-fg --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --verbose",
    "watch:font": "bun ./dist/sparkle-ui/bin/sparkle-fg --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --watch --verbose",
    "start": "bun run watch:font & ng serve --port=4205",
    "build": "ng build sparkle-ui",
    "build:prod": "ng build sparkle-ui --configuration production",
    "watch": "ng build sparkle-ui --watch --configuration development",
    "serve:ssr:design-system": "node dist/design-system/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.1",
    "@angular/common": "^19.0.1",
    "@angular/compiler": "^19.0.1",
    "@angular/core": "^19.0.1",
    "@angular/forms": "^19.0.1",
    "@angular/platform-browser": "^19.0.1",
    "@angular/platform-browser-dynamic": "^19.0.1",
    "@angular/platform-server": "^19.0.1",
    "@angular/router": "^19.0.1",
    "@angular/ssr": "^19.0.2",
    "@japont/unicode-range": "^1.0.0",
    "@types/bun": "^1.1.6",
    "rxjs": "~7.8.0",
    "subset-font": "^2.3.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular/cli": "^19.0.2",
    "@angular/compiler-cli": "^19.0.1",
    "@types/node": "^22",
    "@types/subset-font": "^2.3.0",
    "ng-packagr": "^19.0.1",
    "phosphor-icons": "^1.4.2",
    "prettier": "^3.3.2",
    "typescript": "^5.6.0"
  }
}
