{
  "name": "sparkle-ui",
  "version": "0.1.10",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "patch": "cd projects/sparkle-ui && npm version patch && cd ../../",
    "minor": "cd projects/sparkle-ui && npm version minor && cd ../../",
    "major": "cd projects/sparkle-ui && npm version major && cd ../../",
    "gen:font": "node ./dist/sparkle-ui/bin/sparkle-fg-node.ts --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --verbose",
    "watch:font": "node ./dist/sparkle-ui/bin/sparkle-fg-node.ts --src='./projects/design-system/src' --out='./projects/design-system/public' --rootPath='/' --watch --verbose",
    "start": "bun run watch:font & ng serve --port=4205",
    "build": "ng build sparkle-ui",
    "build:prod": "ng build sparkle-ui --configuration production",
    "build:docs": "ng build design-system --configuration production",
    "serve:docs": "bun run serve-docs",
    "watch": "ng build sparkle-ui --watch --configuration development",
    "serve:ssr:design-system": "node dist/design-system/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.4",
    "@angular/common": "^20.0.4",
    "@angular/compiler": "^20.0.4",
    "@angular/core": "^20.0.4",
    "@angular/forms": "^20.0.4",
    "@angular/platform-browser": "^20.0.4",
    "@angular/platform-browser-dynamic": "^20.0.4",
    "@angular/platform-server": "^20.0.4",
    "@angular/router": "^20.0.4",
    "@angular/ssr": "^20.0.3",
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "rxjs": "~7.8.0",
    "subset-font": "^2.4.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.3",
    "@angular/cli": "^20.0.3",
    "@angular/compiler-cli": "^20.0.4",
    "@phosphor-icons/web": "^2.1.1",
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.10",
    "@types/express": "^4.17.17",
    "@types/subset-font": "^2.3.0",
    "ng-packagr": "^20.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
